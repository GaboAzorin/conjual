# Conjual - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=Conjual
DEBUG=true
ENVIRONMENT=development

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/conjual

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a secure key for production!
# You can use: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-SECURE-KEY-32-CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS (comma-separated origins)
# ===========================================
CORS_ORIGINS=http://localhost:8081,http://localhost:19006,exp://localhost:19000

# ===========================================
# BUDA.COM EXCHANGE (Chile)
# ===========================================
# Get your API keys from: https://www.buda.com/configuracion/api
BUDA_API_KEY=
BUDA_API_SECRET=

# ===========================================
# BINANCE EXCHANGE (For data collection)
# ===========================================
# Optional - for collecting international market data
# Get keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ===========================================
# TRADING CONFIGURATION
# ===========================================
# SAFETY: Keep these disabled until you're ready!
TRADING_ENABLED=false
PAPER_TRADING=true

# Risk management
MAX_SINGLE_TRADE_PCT=0.25
MAX_DAILY_LOSS_PCT=0.10
MIN_BALANCE_CLP=5000

# ===========================================
# DATA COLLECTION
# ===========================================
DATA_COLLECTION_ENABLED=true
DATA_DIR=data

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry DSN for error tracking
# Get it from: https://sentry.io/
SENTRY_DSN=

# ===========================================
# REDIS (Optional - for caching)
# ===========================================
REDIS_URL=redis://localhost:6379/0
